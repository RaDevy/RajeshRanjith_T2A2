<!DOCTYPE html>
<html>
  <head>
    <title>GO G</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <ul>
      <li class="left"><%= link_to 'Home', root_path %></li>
      <li class="left"><%= link_to 'About', about_path%></li>
      <li class="left"><%= link_to 'Products', products_path%></li>
      <% if user_signed_in? %>
        <li class="left"><%= link_to 'Create product listing', new_product_path%></li>
        <li class="right"><%= current_user.email %></li>
        <li class="right"><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li class="right"><a href="/users/sign_in">Sign in</a></li>
      <% end %>
    </ul>
    <%= yield %>
  </body>
</html>
