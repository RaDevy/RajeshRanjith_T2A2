<div class="container">
    <%= form_with url: "/create", method: :get do |f| %>

    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>

    <div class="field">
      <%= f.label :price %><br />
      <%= f.number_field :price %>
    </div>

    <div class="actions_container">
      <%= f.submit "Create Product", class: "actions" %>
    </div>
  <% end %>
</div>