<div class="products_container">  
    <% @products.each do |product| %>
        <%= link_to product, class:"product_link" do %>
            <div class="product_card">
                <h1> <%= product.title %> </h1>
                <p> <%= product.description %> </p>
                <p> $<%= product.price %> </p>
            </div>
        <% end %>
    <% end %>
</div>